# Kronos FastAPI Service - Environment Configuration
# Copy this file to .env and update with your values

# =============================================================================
# Application Configuration
# =============================================================================
KRONOS_APP_NAME=Kronos FastAPI Service
KRONOS_LOG_LEVEL=INFO

# =============================================================================
# Model Configuration
# =============================================================================
# Option 1: Use local model files (default)
KRONOS_MODEL_PATH=/data/ws/kronos/models
# KRONOS_MODEL_HOST_PATH=/data/ws/kronos/models  # For docker-compose volume mapping

# Option 2: Use Hugging Face models (uncomment to use)
# KRONOS_MODEL_ID=NeoQuasar/Kronos-small
# KRONOS_TOKENIZER_ID=NeoQuasar/Kronos-Tokenizer-base

# =============================================================================
# Inference Configuration
# =============================================================================
# Device for inference: cpu, cuda:0, cuda:1, mps
KRONOS_DEVICE=cpu

# Context window (max 512 for Kronos-small/base)
KRONOS_MAX_CONTEXT=512

# Default prediction parameters
KRONOS_DEFAULT_LOOKBACK=400
KRONOS_DEFAULT_PRED_LEN=120
KRONOS_DEFAULT_TEMPERATURE=1.0
KRONOS_DEFAULT_TOP_K=0
KRONOS_DEFAULT_TOP_P=0.9
KRONOS_DEFAULT_SAMPLE_COUNT=1

# Data normalization clipping value
KRONOS_CLIP_VALUE=5.0

# =============================================================================
# Server Configuration
# =============================================================================
# Port for Docker mapping (dev mode only)
KRONOS_PORT=8000

# =============================================================================
# Monitoring and Metrics
# =============================================================================
KRONOS_ENABLE_METRICS=true

# =============================================================================
# Security Configuration (Phase 2)
# =============================================================================
# Container whitelist (comma-separated hostnames)
# KRONOS_ALLOWED_CONTAINERS=frontend,worker,scheduler

# Rate limiting (requests per minute per container)
# KRONOS_RATE_LIMIT=100

# =============================================================================
# Performance Configuration (Phase 3)
# =============================================================================
# Request timeout in seconds
# KRONOS_REQUEST_TIMEOUT=60

# Model inference timeout in seconds
# KRONOS_INFERENCE_TIMEOUT=30

# =============================================================================
# Docker Configuration
# =============================================================================
# Host path to model files (for docker-compose)
KRONOS_MODEL_HOST_PATH=../../../models

# GPU support (uncomment if using NVIDIA GPUs)
# Add to docker-compose.yml under deploy section:
# deploy:
#   resources:
#     reservations:
#       devices:
#         - driver: nvidia
#           count: 1
#           capabilities: [gpu]
